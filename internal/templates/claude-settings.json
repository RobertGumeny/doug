{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",

      "Bash(git log *)",
      "Bash(git diff *)",
      "Bash(git status)",

      "Bash(npm install *)",
      "Bash(npm run build)",
      "Bash(npm run test)",
      "Bash(npm run test:*)",
      "Bash(npm run lint)",
      "Bash(npm run lint:*)",
      "Bash(npm ci)",

      "Bash(gh auth status)",

      "Bash(yq *)",

      "Bash(cat *)",
      "Bash(mkdir *)",
      "Bash(mv *)",
      "Bash(cp *)",
      "Bash(rm *)",
      "Bash(touch *)",
      "Bash(echo *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)"
    ],
    "deny": [
      "Bash(npm run dev)",
      "Bash(git add *)",
      "Bash(git commit:*)",
      "Bash(git commit -m *)",
      "Bash(git commit --amend *)",
      "Bash(git checkout *)",
      "Bash(git branch *)",
      "Bash(git pull *)",
      "Bash(git push *)",
      "Bash(git stash *)",
      "Bash(git rebase *)",
      "Bash(gh pr create *)",
      "Bash(rm -rf /)",
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Read(.env*)",
      "Write(*.env*)",
      "Write(*.yaml*)",
      "Write(*.yaml)"
    ]
  }
}
